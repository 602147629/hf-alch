{% if $showNotice == true %}
<div id="notice" style="position:absolute;left:190px;top:65px;width:520px;height:16px;overflow:hidden;">
<ul>
{% foreach from=$notice item=data %}
<li>{%if $data.link%}<a href="{%$data.link%}" target="_blank">[{%$data.create_time|date_format:"%Y-%m-%d"%}]  {%$data.title%}</a>{%else%}[{%$data.create_time|date_format:"%Y-%m-%d"%}]  {%$data.title%}{%/if%}</li>
{% /foreach %}
</ul>
<script type="text/javascript">
function autoScroll(obj)
{
$(obj).find("ul:first").animate({
	marginTop:"-16px"
	},500,function(){
		$(this).css({marginTop:"0px"}).find("li:first").appendTo(this);
	});
}
$(document).ready(function(){
	setInterval('autoScroll("#notice")',10000)
});
</script>
</div>
{% /if %}
</div>

