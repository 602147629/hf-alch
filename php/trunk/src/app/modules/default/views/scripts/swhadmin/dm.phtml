		<div id="divedit">
		<table >
		<tr>
			<th>DM</th><th>BTN</th><th>操做</th>
		</tr>
		<td><textarea id="dm1" style="width:300px;height:100px;">{%$config.dm%}</textarea></td>
		<td><textarea id="btn1" style="width:300px;height:100px;">{%$config.btn%}</textarea></td>
		<td><input type="button"  onclick="update({%$config.id%});" value="修改"/></td>
		</tr>
		</table>
		</div>
