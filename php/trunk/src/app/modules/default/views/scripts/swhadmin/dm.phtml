	<script type="text/javascript">

	function update(id) {
		var dm  = $("#dm1").val();
		var btn = $("#btn1").val();
		$.ajax({
            type: 'POST',
            url: '/swhadmin/updatedm',
            data: {'id': id,'dm':dm,'btn':btn},
            dataType: 'text',
            success: function(resp){
            	location.reload(true);  
            },
    		error: function(resp){
    		},
    		complete: function(resp){
    		}
 		});
		
	}
	</script>
